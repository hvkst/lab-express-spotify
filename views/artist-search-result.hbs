{{#if arrayOfArtists}}
  <h1 class='search-result-heading'>Search results for "{{searchQuery}}":</h1>
{{/if}}
{{#unless arrayOfArtists}}
  <h1 class='search-result-heading'>WeÂ´re sorry, we have nothing for: "{{searchQuery}}"</h1>
{{/unless}}
<div class='artist-page-wrap'>

  {{#each arrayOfArtists}}
    <div class='artist-image-wrap'>
      {{#if this.images.1.url}}
        <img class='artist-image' src='{{this.images.1.url}}' alt='Picture of {{this.name}}' />
      {{/if}}
      {{#unless this.images.1.url}}
        <img class='artist-image' src='https://dummyimage.com/300x300/333333/1ed75f.jpg&text=No+picture+here...' alt='No picture for this Artist' />
      {{/unless}}
      <h2>{{this.name}}</h2>
      <a href='/albums/{{this.id}}'>View Albums</a>
    </div>

  {{/each}}
</div>

